{
  "compilerOptions": {
    "target": "es6",                                   /* Updated from es2016 to es6 */
    "module": "commonjs",
    "rootDir": "./src",                                /* Set your source directory */
    "outDir": "./dist",                                /* Set your output directory */
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
